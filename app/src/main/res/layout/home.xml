<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".Home"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:orientation="vertical">

        <TextView
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="WELCOME HOME!"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@drawable/yellow2_banner_background">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_calendar"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/calendar">
        </ImageButton>

        <ImageButton
            android:id="@+id/btn_task"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/task">
        </ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_chatting"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/chatting">

        </ImageButton>

        <ImageButton
            android:id="@+id/btn_map"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/map">

        </ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/setting">

        </ImageButton>
        <ImageButton
            android:id="@+id/btn_information"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/personal_infor">

        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="27dp"
            android:backgroundTint="#D6D88A"
            android:text="Log out"
            android:textSize="20dp"
            android:textStyle="bold">
        </Button>
    </LinearLayout>
</LinearLayout>